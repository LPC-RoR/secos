<!DOCTYPE html>
<html>
  <head>
    <title><%=config_aplicacion(:nombre_aplicacion)%></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= favicon_link_tag asset_path('favicon.ico') if File.exist?("app/assets/images/favicon.ico") %>
  </head>

  <body>
    <!--            NAVBAR                     -->
    <%= render partial: '0p/navbar/navbar' %>
    <!--            CONTENIDO + MENU DERECHA   -->
    <div class="container-fluid">
      <% if File.exist?("app/views/layouts/_base_layout.html.erb") %>
        <%= render partial: 'layouts/base_layout' %>
      <% else %>
        <%= yield %>
      <% end %>
    </div>
    <!------------------------------------------->
    </br></br></br>
    <% if objeto_tema_ayuda('foot').present? %>
      <%= render partial: 'help/0help/tema_ayuda/0h_ilustracion', locals: {objeto: objeto_tema_ayuda('foot'), class_image: config_foot(:clase), size: config_foot(:size) } %>
    <% end %>
    </br></br></br>
  </body>
</html>
