<p id="notice"><%= notice %></p>

<h1>Tutoriales</h1>

<table>
  <thead>
    <tr>
      <th>Orden</th>
      <th>Tutorial</th>
      <th>Detalle</th>
      <th>Tema ayuda</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tutoriales.each do |tutorial| %>
      <tr>
        <td><%= tutorial.orden %></td>
        <td><%= tutorial.tutorial %></td>
        <td><%= tutorial.detalle %></td>
        <td><%= tutorial.tema_ayuda_id %></td>
        <td><%= link_to 'Show', tutorial %></td>
        <td><%= link_to 'Edit', edit_tutorial_path(tutorial) %></td>
        <td><%= link_to 'Destroy', tutorial, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tutorial', new_tutorial_path %>
