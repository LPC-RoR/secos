<div class='row'>
	<div class='col-md-6'>

		<h3 class='text-info'>Registrar Red de colaboración</h3>

		<small><%= form.label 'Nombre de la Red' %></small></br>
		<%= form.text_field(:nombre_red, size: 74, class: 'form-control-sm') %>
		<small><b><%= form.label 'Objetivo' %></b></small></br>
	  	<%= form.text_area :objetivo, size: '66x8' %><!--/br-->
		<small><b><%= form.label 'Descripción' %></b></small></br>
	  	<%= form.text_area :descripcion, size: '66x8' %><!--/br-->

		<small><%= form.label 'Institución Co-Participante ' %></small></br>
		<%= form.text_field(:institucion_co_participante, size: 74, class: 'form-control-sm') %>
		<small><%= form.label 'Tipo de Productos' %></small></br>
		<%= form.text_field(:tipo_productos, size: 74, class: 'form-control-sm') %>
		<small><%= form.label 'N° de Productos' %></small></br>
		<%= form.text_field(:n_productos, size: 74, class: 'form-control-sm') %>

	</div>
</div>

<div class='row'>
	<div class='col-md-6'>
		<small><%= form.label 'Investigadores del Centro Participantes en la Actividad' %></small></br>

		<ul>
		<% @objeto.investigadores.each do |inv| %>
			<li><%= inv.investigador %></li>
		<% end %>
		</ul>
	</div>
	<div class='col-md-6'>
		<%= form.select :investigador_ids,
		    options_from_collection_for_select(Investigador.all, :id, :investigador),
		    { include_blank: false },
		    multiple: true,
		    class: 'select multiple-select',
		    size: 5 %>
	</div>
</div>

<div class='row'>
	<div class='col-md-6'>

		<small><%= form.label 'N° Investigadores del Centro Milenio en la Red' %></small></br>
		<%= form.text_field(:n_investigadores_milenio, size: 74, class: 'form-control-sm') %>
		<small><%= form.label 'N° Postdoctorados/Estudiantes del Centro Milenio en la Red' %></small></br>
		<%= form.text_field(:n_postdoc_alumnos_milenio, size: 74, class: 'form-control-sm') %>
		<small><%= form.label 'N° Investigadores Externos en la Red' %></small></br>
		<%= form.text_field(:n_investigadores_externos, size: 74, class: 'form-control-sm') %>
		<small><%= form.label 'N° Postdoctorados/Estudiantes Externos en la Red' %></small></br>
		<%= form.text_field(:n_postdoc_alumnos_externos, size: 74, class: 'form-control-sm') %>

	</div>
</div>
