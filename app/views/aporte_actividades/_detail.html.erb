<div class='row'>
	<div class='col-md-6'>

		<h3 class='text-info'>Registro Aporte Actividad de Difusión Organizada</h3>

		<div class="field">
			<small><%= form.label 'Tipo' %></small></br>
			<%= form.label :tipo, "Actividad Difusión"  %>
			<%= form.radio_button :tipo, 'Actividad Difusión', :checked => true %>
			<%= form.label :tipo, "Producto PME" %>
			<%= form.radio_button :tipo_documento, 'Producto PME' %>
			<%= form.label :tipo, "Actividad Científica" %>
			<%= form.radio_button :tipo, 'Actividad Científica' %>
		</div>

		<small><%= form.label 'Actividad o Producto' %></small></br>
		<%= form.select :actividad_producto, ActividadDifusion.all, prompt: "Actividad o Producto?" %></br>

		<small><%= form.label 'Colaborador' %></small></br>
		<%= form.text_field(:colaborador, size: 74, class: 'form-control-sm') %>
		<small><%= form.label 'Tipo Colaboración' %></small></br>
		<%= form.select :tipo_colaboracion, AporteActividad::TIPOS_COLABORACIONES, prompt: "Tipo Colaboración?" %></br>

		<small><%= form.label 'Monto de Colaboración (en pesos)' %></small></br>
		<%= form.text_field(:monto, size: 74, class: 'form-control-sm') %>

	</div>
</div>
