<div class='row'>
	<div class='col-md-6'>

		<h3 class='text-info'>Registrar Tesis</h3>

		<small><%= form.label 'Estudiante' %></small></br>
		<%= form.select :estudiante, Investigador.all.map{|inv| inv.investigador}, prompt: "Estudiante?" %></br>

		<small><%= form.label 'Nivel de Formación' %></small></br>
		<%= form.select :nivel_formacion, TesisFinalizada::NIVELES_FORMACION, prompt: "Nivel de Formación?" %></br>

		<small><%= form.label 'Nombre de Tesis' %></small></br>
		<%= form.text_field(:nombre_tesis, size: 74, class: 'form-control-sm') %>
	</div>
</div>

<div class='row'>
	<div class='col-md-6'>
		<small><%= form.label 'Líneas de Investigación' %></small></br>

		<ul>
		<% @objeto.linea_investigaciones.each do |li| %>
			<li><%= li.linea_investigacion %></li>
		<% end %>
		</ul>
	</div>
	<div class='col-md-6'>
		<%= form.select :linea_investigacion_ids,
		    options_from_collection_for_select(LineaInvestigacion.all, :id, :linea_investigacion),
		    { include_blank: false },
		    multiple: true,
		    class: 'select multiple-select',
		    size: 5 %>
	</div>
</div>

<div class='row'>
	<div class='col-md-6'>

		<small><%= form.label 'Fecha Aprobación Tesis' %></small></br>
		<%= form.date_select :fecha_aprobacion, {order: [:day, :month, :year], prompt: { day: 'Día?', month: 'Mes?', year: 'Año?' }, start_year: Date.today.year + 1, end_year: Date.today.year - 100}, {required: true} %></br>

	</div>
</div>

