		    { include_blank: false },
		    multiple: true,
		    class: 'select multiple-select',
		    size: 5 %>
	</div>
</div>

<div class='row'>
	<div class='col-md-6'>

		<small><%= form.label 'Nombre Presentación' %></small></br>
		<%= form.text_field(:nombre_presentacion, size: 74, class: 'form-control-sm') %>
		<small><%= form.label 'Nombre del Evento' %></small></br>
		<%= form.text_field(:nombre_evento, size: 74, class: 'form-control-sm') %>
		<small><%= form.label 'Link a Presentación' %></small></br>
		<%= form.text_field(:link_presentacion, size: 74, class: 'form-control-sm') %>
		<small><%= form.label 'Fecha' %></small></br>
		<%= form.date_select :fecha, {order: [:day, :month, :year], prompt: { day: 'Día?', month: 'Mes?', year: 'Año?' }, start_year: Date.today.year + 1, end_year: Date.today.year - 100}, {required: true} %></br>
		<small><%= form.label 'Ciudad' %></small></br>
		<%= form.text_field(:ciudad, size: 74, class: 'form-control-sm') %>
		<small><%= form.label 'País' %></small></br>
		<%= form.select :pais, Pais.all.map {|pais| pais.pais}, prompt: "País?" %></br>

	</div>
</div>
