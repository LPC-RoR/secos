<table class="table table-striped table-sm  thead-dark">
  <tbody>
  	<!-- OpciÃ³n para evitar escribir el parcial _modelo.html.erb en cada controlador-->
  	<% unless coleccion.blank? %>
	  	<% coleccion.each do |objeto| %>
	  		<tr>
	  			<td>
					<%= image_tag objeto.imagen.thumb.url, class: "rounded mx-auto d-block img-thumbnail" if objeto.imagen? %>
				</td>
				<td>
					<p>
					<%= link_to objeto.nota, objeto.imagen.url, target: '_blank' if objeto.imagen? %></br><small><%= objeto.d_nombre if objeto.imagen? %></small>
					</p>
				</td>
				<td><%= render partial: '0p/tabla/btns', locals: {a: 'index', objeto: objeto} %></td>
			</tr>
		<% end  %>
  	<% end %>
  </tbody>
</table>
