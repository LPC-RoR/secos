<%= render partial: '0p/general/o_titulo', locals: {o: @objeto, a: action_name, size: '5'} %>
<%= render partial: '0p/general/btn_turbolink', locals: {texto: nil, gly: 'archive', link: directorios_path, delete: false, style: 'btn-outline-dark', clr: color(controller_name)} %>
<% @padres.each do |padre| %>
	<%= render partial: '0p/general/btn_turbolink', locals: {texto: padre.directorio, gly: 'folder', link: padre, delete: false, style: 'btn-outline-dark', clr: color(controller_name)} %>
<% end %>
</br></br>
<div class='row'>
	<div class='col-md-6'>

		<i class="bi bi-folder2-open"></i><small> Directorios</small>

		<%#= render partial: '0p/general/titulo', locals: {c: 'directorios', a: 'index', titulo: 'Directorios', size: '5'} %>
		<%= form_for :nuevo_directorio, url: "/directorios/nuevo?objeto_id=#{@objeto.id}" do |form| %>
			<div class='form-inline'>
				<%= form.text_field(:directorio, size: 62, class: 'form-control' ) %>

				<button type="submit" class="btn btn-primary">
				  <i class="bi-plus-circle"></i>
				</button>

			</div>
		<% end  %>
		</br>
		<%= render partial: '0p/tabla/solo_tabla', locals: {c: 'directorios', a: 'index'} %>

	</div>
	<div class='col-md-6'>
		<i class="bi bi-journals"></i><small> Documentos</small>
		<%#= render partial: '0p/general/titulo', locals: {c: 'documentos', a: 'index', titulo: 'Documentos', size: '5'} %>
		<%= render partial: '0p/tabla/solo_tabla', locals: {c: 'documentos', a: 'index'} %>
		<%= render partial: '0p/tabla/ext_btn_nuevo', locals: {o: @objeto, c: 'documentos', gly: 'plus-circle'} %>

		</br></br>
		<i class="bi bi-images"></i><small> Im√°genes</small>
		<%= paginate @coleccion['imagenes'] %>
		<%= render partial: '/aplicacion/imagenes/partials/index', locals: {coleccion: @coleccion['imagenes']} %>
		<%= render partial: '0p/tabla/ext_btn_nuevo', locals: {o: @objeto, c: 'imagenes', gly: 'plus-circle'} %>
	</div>
</div>