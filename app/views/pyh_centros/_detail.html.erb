<div class='row'>
	<div class='col-md-6'>

		<h3 class='text-info'>Registrar Premio del Centro</h3>

		<small><%= form.label 'Premio' %></small></br>
		<%= form.text_field(:premio, size: 74, class: 'form-control-sm') %>
		<small><%= form.label 'fecha' %></small></br>
		<%= form.date_select :fecha, {order: [:day, :month, :year], prompt: { day: 'Día?', month: 'Mes?', year: 'Año?' }, start_year: Date.today.year + 1, end_year: Date.today.year - 100}, {required: true} %></br>
		<small><%= form.label 'Contribución del Científico Premiado' %></small></br>
		<%= form.text_field(:contribucion, size: 74, class: 'form-control-sm') %>
		<small><%= form.label 'Institución Otorgante' %></small></br>
		<%= form.text_field(:institucion, size: 74, class: 'form-control-sm') %>
		<small><%= form.label 'País' %></small></br>
		<%= form.select :pais, Pais.all.map {|pais| pais.pais}, prompt: "País?" %></br>

	</div>
</div>
