<%= render partial: '0p/general/titulo', locals: {c: nil, a: nil, titulo: "+ #{modelo}", size: '5', bg_color: modelo.tableize} %>
<%= form_for :nuevo_modelo, url: "/#{modelo.tableize}/nuevo?objeto_id=#{@objeto.id}&class_name=#{@objeto.class.name}" do |form| %>
	<div class='form-inline'>
		<%= form.text_field(:modelo, size: size, class: 'form-control' ) %>
		<%= form.submit "+ #{modelo}"  %>
	</div>
<% end  %>
