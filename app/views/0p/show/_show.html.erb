<!-- SHOW -->

<!-- TITULO NORMAL: se usa 'titulo_ruta' -->
<!-- SIEMPRE SE DESPLIEGA EL TITULO -->
<%= render partial: '0p/general/o_titulo', locals: {o: @objeto, a: action_name, size: '5'} if in_show?(@objeto, :titulo) %>

<!-- LINKS -->
<%= render partial: '0p/show/links', locals: {o: @objeto} if in_show?(@objeto, :partial_links) %>

<!-- SHOW DISPLAY -->
<%= render partial: '0p/show/detalle', locals: {c: controller_name, o: @objeto} if in_show?(@objeto, :detalle) %>

<!-- INLINE_FORM -->
<%= render partial: "/#{@objeto.class.name.tableize}/show_inline_form", locals: {c: controller_name, o: @objeto} if in_show?(@objeto, :inline_form) %>

<!-- LOS TABS AQUI DESPLEGADOS SON LOS QUE SE OBTIENEN DE LAS REALACIONES HAS_MANY -->
<% if in_show?(@objeto, :tabla) %>
	<!-- TABS -->
	<%= render partial: '0p/tabs/tabs', locals: {tabs: has_many_tabs(controller_name), tag: 'tab', active: @tab} %>
	<%= render partial: '0p/tabla/tabla', locals: {c: alias_tabla(@tab), a: 'index'} %>
<% end %>
