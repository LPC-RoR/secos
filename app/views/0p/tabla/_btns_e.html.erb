<% if crud_conditions(objeto, 'Editar') %>
	<%= render partial: '0p/tabla/btn', locals: {texto: 'Editar', link: [:edit, objeto], delete: false, clr: c_color(objeto.class.name.tableize)} %>
<% end %>
<% if crud_conditions(objeto, 'Eliminar') %>
	<% if not has_child?(objeto) %>
		<%= render partial: '0p/tabla/btn', locals: {texto: 'Eliminar', link: objeto, delete: true, clr: c_color(objeto.class.name.tableize)} %>
	<% end %>
<% end %>
